{
  "main": [
    {
      "label": "Choose a name for your project *",
      "type": "input",
      "name": "title",
      "elementType": "text",
      "placeholder": "e.g. Build me an e-commerce website",
      "inputStyle": "big"
    },
    {
      "label": "Tell us more about your project *",
      "type": "textarea",
      "name": "description",
      "elementType": "text",
      "placeholder": "Describe your project here...",
      "inputStyle": "big"
    },
    {
      "label": "Skills Required to do the Project (select at least 2) *",
      "type": "select-skills",
      "name": "skill-categories",
      "placeholder": "Select Skill",
      "elementType": "text"
    }
  ],
  "durationModel": [
    {
      "label": "Duration Period *",
      "type": "input",
      "name": "durationPeriod",
      "elementType": "text",
      "placeholder": "Project duration in number",
      "inputStyle": "big"
    },
    {
      "label": "Project Duration *",
      "type": "select",
      "name": "duration",
      "elementType": "text",
      "options": [
        { "text": "Select Project Duration", "value": "" },
        { "text": "hrs", "value": "HOURLY" },
        { "text": "Day(s)", "value": "DAYS" },
        { "text": "Week(s)", "value": "WEEKS" },
        { "text": "Monthly", "value": "MONTHLY" },
        { "text": "Yearly", "value": "YEARLY" }
      ]
    }
  ],
  "price": [
    {
      "label": "Price (USD) *",
      "type": "input",
      "name": "price",
      "elementType": "text",
      "placeholder": "Project Price ($)",
      "inputStyle": "big",
      "note": "you can pay in your local currency, but the job will be listed in USD ($)"
    },
    {
      "label": "Price / Period *",
      "type": "select",
      "name": "pricePeriod",
      "elementType": "text",
      "options": [
        { "text": "Select Price Type ", "value": "" },
        { "text": "Total", "value": "TOTAL" },
        { "text": "hr", "value": "HOURLY" },
        { "text": "day", "value": "DAILY" },
        { "text": "week", "value": "WEEKS" },
        { "text": "month", "value": "MONTHLY" },
        { "text": "year", "value": "YEARLY" }
      ]
    }
  ],
  "media": {
    "name": "media",
    "placeholder": "Attach document",
    "label": "Upload a document (pdf/picture), to help the freelancer understand the scope of your job better (optional)",
    "type": "media",
    "elementType": "media"
  }
}
