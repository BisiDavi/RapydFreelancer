{
  "main": [
    {
      "label": "Choose a name for your project",
      "type": "input",
      "name": "title",
      "elementType": "text",
      "placeholder": "e.g. Build me an e-commerce website",
      "inputStyle": "big"
    },
    {
      "label": "Tell us more about your project",
      "type": "textarea",
      "name": "description",
      "elementType": "text",
      "placeholder": "Describe your project here...",
      "inputStyle": "big"
    },
    {
      "label": "Skills Required to do the Project (select at least 2)",
      "type": "select-skills",
      "name": "skill-categories",
      "placeholder": "Select Skill",
      "elementType": "text"
    }
  ],
  "pricingModel": [
    {
      "label": "Pricing Model",
      "type": "select",
      "name": "pricingModel",
      "elementType": "text",
      "options": [
        { "text": "Select Pricing Model", "value": "" },
        { "text": "Fixed Price", "value": "FIXED_PRICE" },
        { "text": "Price Varies (Range)", "value": "PRICE_VARIES" }
      ]
    },
    {
      "label": "Project Duration",
      "type": "input-select",
      "name": "duration",
      "elementType": "text",
      "options": [
        { "text": "Select Project Duration", "value": "" },
        { "text": "hrs", "value": "HOURLY" },
        { "text": "Day(s)", "value": "DAYS" },
        { "text": "Week(s)", "value": "WEEKS" },
        { "text": "Monthly", "value": "MONTHLY" },
        { "text": "Yearly", "value": "YEARLY" }
      ]
    }
  ],
  "price": [
    {
      "label": "Price (USD)",
      "type": "input",
      "name": "price",
      "elementType": "text",
      "placeholder": "Project Price ($)",
      "inputStyle": "big",
      "note": "you can pay in your local currency, but the job will be listed in USD ($)"
    },
    {
      "label": "Price / Period",
      "type": "select",
      "name": "pricePeriod",
      "elementType": "text",
      "options": [
        { "text": "Select Price Type ", "value": "" },
        { "text": "/hr", "value": "HOURLY" },
        { "text": "/way", "value": "DAYS" },
        { "text": "/week", "value": "WEEKS" },
        { "text": "/month", "value": "MONTHLY" },
        { "text": "/year", "value": "YEARLY" }
      ]
    }
  ],
  "priceVaries": [
    {
      "label": "Price Range (min - max) ($)",
      "type": "price-range",
      "name": "price",
      "elementType": "text",
      "placeholder": "Project Price",
      "inputStyle": "big",
      "note": "you can pay in your local currency, but the job will be listed in USD ($)"
    },
    {
      "label": "Price / Period",
      "type": "select",
      "name": "pricePeriod",
      "elementType": "text",
      "options": [
        { "text": "Select Price Type ", "value": "" },
        { "text": "/hr", "value": "HOURLY" },
        { "text": "/way", "value": "DAYS" },
        { "text": "/week", "value": "WEEKS" },
        { "text": "/month", "value": "MONTHLY" },
        { "text": "/yearly", "value": "YEARLY" }
      ]
    }
  ]
}
